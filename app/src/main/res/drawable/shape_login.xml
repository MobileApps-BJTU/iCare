<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。-->
        <shape>
            <stroke android:color="#ffff675f" android:width="1dp"/>
            <gradient android:startColor="#fffffefd"
                      android:endColor="#fffefdff"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <!-- 定义当button没有获得focus时的形态-->
        <shape>
            <stroke android:color="#ffff5e54" android:width="1dp"/>
            <gradient android:startColor="#00FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>

</selector>