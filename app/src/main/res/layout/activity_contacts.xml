<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                tools:context="com.example.n56.care.View.Discovery">
    <TextView
        android:id="@+id/ContactsTitle"
        android:text="Contacts"
        android:gravity="center"
        android:textSize="@dimen/normal_title_size"
        android:textColor="@color/normal_title_color"
        android:background="@color/normal_title_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/add"
        android:clickable="true"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/ContactsTitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_add"
            android:background="@drawable/add"
            android:layout_width="@dimen/large_icon_size"
            android:layout_height="@dimen/large_icon_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_add"
            android:textSize="@dimen/large_text_size"
            android:textColor="@color/normal_text_color"
            android:text="Add"
            />
        </RelativeLayout>


    <Button
        android:id="@+id/line001"
        android:layout_below="@+id/add"
        android:layout_marginTop="6dp"
        android:background="@drawable/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"/>

    <ListView
        android:layout_below="@+id/line001"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:divider="@drawable/liner"
        android:dividerHeight="1dip"
        android:footerDividersEnabled="true"
        android:id="@+id/ListViewContacts"
        />

    <Button
        android:layout_below="@+id/ListViewContacts"
        android:background="@drawable/liner"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"/>

</RelativeLayout>
