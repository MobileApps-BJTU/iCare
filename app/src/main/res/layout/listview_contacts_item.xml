<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/normal_item_size"
                android:paddingBottom="4dip"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
    >

    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ItemHead"
        android:layout_width="@dimen/large_icon_size"
        android:layout_height="@dimen/large_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/ItemName"
        android:layout_toRightOf="@+id/ItemHead"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/normal_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ItemDetail"
        android:clickable="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/detail"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"/>
        <TextView
            android:text="Detail"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/normal_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ItemDetail"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ItemLocate"
            android:text="Locate"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:textColor="@color/flat_text_color"
            android:textSize="@dimen/normal_text_size"
            android:background="@drawable/shape_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/ItemChat"
            android:text="Chat"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textColor="@color/flat_text_color"
            android:textSize="@dimen/normal_text_size"
            android:background="@drawable/shape_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
</RelativeLayout>